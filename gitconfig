[diff]

[color]
  ui = auto

[alias]
  st = status
  br = branch -vv
  aa = add --all
  ci = commit -v
  ca = commit --amend
  co = checkout
  di = diff --color-words
  dc = diff --color-words --cached
  dh = diff --color-words HEAD~1
  ff = merge --ff-only
  pullff = pull --ff-only
  count = diff --stat 4b825dc642cb6eb9a060e54bf8d69288fbee4904 # hash empty tree
  gr = log --graph --format=rainbow
  gra = log --graph --format=rainbow --all

[pretty]
  rainbow = "%C(auto)%h%d %s %C(yellow)by %C(cyan)%an %C(yellow)%ar"

[merge]
  tool = vimdiff

[push]
  default = upstream

[core]
  excludesfile = ~/.gitignore_global

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig_local
